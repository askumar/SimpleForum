<%= error_messages @comment %>
<%= form_for(@comment) do |f| %>
  <%= f.hidden_field :commentable_id %>
  <%= f.hidden_field :commentable_type %>

  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content, :rows => 5 %><br/>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
